<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!--
        Added the constraints for entity Student.
    -->
    <changeSet id="20180815131236-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="center_id"
                                 baseTableName="student"
                                 constraintName="fk_student_center_id"
                                 referencedColumnNames="id"
                                 referencedTableName="center"/>

        <addForeignKeyConstraint baseColumnNames="room_id"
                                 baseTableName="student"
                                 constraintName="fk_student_room_id"
                                 referencedColumnNames="id"
                                 referencedTableName="room"/>

        <addForeignKeyConstraint baseColumnNames="id_id"
                                 baseTableName="student"
                                 constraintName="fk_student_id_id"
                                 referencedColumnNames="id"
                                 referencedTableName="student_profile"/>

        <addForeignKeyConstraint baseColumnNames="incident_id"
                                 baseTableName="student"
                                 constraintName="fk_student_incident_id"
                                 referencedColumnNames="id"
                                 referencedTableName="incident"/>

    </changeSet>
</databaseChangeLog>
